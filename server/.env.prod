# ===========================================
# FitActive Presales - Production Environment
# ===========================================

# Application Configuration
NODE_ENV=prod
PORT=3003
APP_NAME=FitActive Presales
APP_BASE_URL=https://presale.fitactive.open-sky.org

# Database
DATABASE_PATH=./production.sqlite

# ===========================================
# NETOPIA Payment Gateway (Production)
# ===========================================
NETOPIA_API_BASE=https://secure.netopia-payments.com
NETOPIA_SANDBOX=false
NETOPIA_API_KEY=your_api_key_here
NETOPIA_POS_SIGNATURE=YOUR_POS_SIGNATURE
NETOPIA_REDIRECT_PATH=#thank-you
NETOPIA_RETURN_URL=https://presale.fitactive.open-sky.org/#/thankyou
NETOPIA_CONFIRM_URL=https://presale.fitactive.open-sky.org/api/netopia/ipn
NETOPIA_NOTIFY_URL=https://presale.fitactive.open-sky.org/api/netopia/ipn
NETOPIA_PUBLIC_KEY_PATH=./server/netopia_public.pem

# ===========================================
# SmartBill Invoice Service (Production)
# ===========================================
SMARTBILL_API_BASE=https://api.smartbill.ro
SMARTBILL_SANDBOX=false
SMARTBILL_EMAIL=vitan@fitactive.ro
SMARTBILL_TOKEN=tokenul_smartbill
SMARTBILL_VATCODE=RO12345678
SMARTBILL_SERIES=FA012345678

# ===========================================
# Email Configuration (Production)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=YOUR_PRODUCTION_EMAIL
SMTP_PASS=YOUR_PRODUCTION_PASSWORD
SMTP_FROM=noreply@fitactive.ro
SMTP_FROM_NAME=FitActive
MAIL_FROM="FitActive <noreply@fitactive.ro>"

# CORS
CORS_ORIGIN=https://presale.fitactive.open-sky.org

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs/production.log

# Security (Production only)
FORCE_HTTPS=true
TRUST_PROXY=true

# Enable environment variable substitution
USE_ENV_SUBSTITUTION=true
