#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and formatting checks before commit
echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
  echo "âŒ Not in project root directory"
  exit 1
fi

# Run frontend checks
echo "ğŸ“± Checking frontend..."
cd frontend
npm run lint --silent
if [ $? -ne 0 ]; then
  echo "âŒ Frontend linting failed"
  exit 1
fi

# Run backend checks
echo "ğŸ–¥ï¸  Checking backend..."
cd ../server
npm run lint --silent
if [ $? -ne 0 ]; then
  echo "âŒ Backend linting failed"
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test --silent
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed"
  exit 1
fi

cd ..
echo "âœ… All pre-commit checks passed!"
