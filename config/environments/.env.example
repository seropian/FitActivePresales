# FitActive Presales Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001
APP_NAME=FitActive Presales
APP_URL=http://localhost:3001

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_PATH=./data.sqlite

# =============================================================================
# NETOPIA PAYMENT GATEWAY SETTINGS
# =============================================================================
# Get these from your NETOPIA merchant account
NETOPIA_API_KEY=your_api_key_here
NETOPIA_SIGNATURE=your_signature_here
NETOPIA_PUBLIC_KEY_PATH=./netopia_public.pem
NETOPIA_SANDBOX=true

# URLs for payment processing
NETOPIA_RETURN_URL=http://localhost:5173/#/thankyou
NETOPIA_CONFIRM_URL=http://localhost:3001/api/netopia/ipn
NETOPIA_NOTIFY_URL=http://localhost:3001/api/netopia/ipn

# =============================================================================
# SMARTBILL INVOICE SETTINGS
# =============================================================================
# Get these from your SmartBill account
SMARTBILL_USERNAME=your_username_here
SMARTBILL_TOKEN=your_token_here
SMARTBILL_SANDBOX=true

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
# SMTP Configuration (use Mailtrap for development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password
SMTP_FROM=noreply@fitactive.ro
SMTP_FROM_NAME=FitActive

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a strong secret key for sessions/JWT
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
