# Production Environment Configuration
NODE_ENV=production
PORT=3003
APP_NAME=FitActive Presales
APP_URL=https://presale.fitactive.open-sky.org

# Database
DATABASE_PATH=./production.sqlite

# NETOPIA (Production)
NETOPIA_SANDBOX=false
NETOPIA_RETURN_URL=https://presale.fitactive.open-sky.org/#/thankyou
NETOPIA_CONFIRM_URL=https://presale.fitactive.open-sky.org/api/netopia/ipn
